<%= form_for(@annotation, name: "form1"), :html => {:name => "form1"} do |f| %>
  <% if @annotation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@annotation.errors.count, "error") %> prohibited this annotation from being saved:</h2>

      <ul>
      <% @annotation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :pagepage %><br />
    <%= f.number_field :pagepage %>
  </div>
  <div class="field">
    <%= f.label :line %><br />
    <%= f.text_area :line %>
  </div>
  <div class="field">
    <%= f.label :article_id %><br />
    <%= f.text_field :article_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
